<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_description"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"

    >
    <ImageView
        android:id="@+id/image_add"
        android:layout_marginLeft="10dp"
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_map_active"
        android:elevation="16dp" />
    <LinearLayout
        android:layout_below="@+id/image_add"
        android:id="@+id/linearlayout"
        android:elevation="16dp"
        android:padding="15dp"
        android:background="@drawable/bottom_des"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/des_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="Bệnh viện Bạch Mai"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="20dp"/>
        <TextView

            android:id="@+id/des_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/black"
            android:text="Địa chỉ: 78 Đường Giải Phóng, Phương Đình,  Đống Đa, Hà Nội"/>

    </LinearLayout>
</RelativeLayout>