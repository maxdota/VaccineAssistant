<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_description"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    android:layout_margin="2dp"
    android:orientation="vertical"
    android:background="@drawable/ic_bottom_description"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    android:elevation="16dp"
    >
    <TextView
        android:id="@+id/des_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="Bệnh viện Bạch Mai"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="20dp"/>
    <TextView

        android:id="@+id/des_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/black"
        android:text="Địa chỉ: 78 Đường Giải Phóng, Phương Đình,  Đống Đa, Hà Nội"/>
    <TextView
        android:id="@+id/des_injection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/black"
        android:text="Vaccin: AstraZeneca, Vero Cell, Comirnaty, Spikevax"/>
</LinearLayout>