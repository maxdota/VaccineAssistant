<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/each_item"
    android:padding="10dp"
    android:layout_margin="15dp"
    >

        <LinearLayout
            android:padding="10dp"
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
                <TextView
                    android:id="@+id/tname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tên địa điểm"
                    android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:padding="10dp"
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iaddress"
                    android:layout_width="wrap_content"
                    android:paddingTop="3dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_add_location_24"
                   />
                <TextView
                    android:id="@+id/taddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Địa chỉ"
                    android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:padding="10dp"
            android:id="@+id/time"
            android:layout_below="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                        <TextView
                            android:drawableStart="@drawable/ic_baseline_access_time_24"
                            android:id="@+id/start"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mở cửa"
                            android:textSize="20dp"
                            android:layout_marginBottom="10dp"/>
                        <TextView
                            android:drawableStart="@drawable/ic_baseline_perm_identity_24"
                            android:id="@+id/tage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Độ tuổi"
                            android:textSize="20dp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp">
                        <TextView
                                android:drawableStart="@drawable/injection"
                                android:id="@+id/tvaccine"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Loại vaccine"
                                android:textSize="20dp"
                                android:layout_marginBottom="10dp"/>
                        <TextView
                            android:drawableStart="@drawable/ic_baseline_monetization_on_24"
                            android:id="@+id/tfee"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Phí"
                            android:textSize="20dp" />
                </LinearLayout>



                <!--                <TextView-->
                <!--                    android:id="@+id/close"-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:text="Đóng cửa"-->
                <!--                    android:textSize="20dp" />-->
        </LinearLayout>

        <!--        <LinearLayout-->
        <!--            android:id="@+id/vaccine"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_below="@+id/time"-->
        <!--            android:orientation="horizontal"-->
        <!--            android:padding="10dp">-->

        <!--        </LinearLayout>-->



        <!--        <LinearLayout-->
        <!--            android:id="@+id/region"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="54dp"-->
        <!--            android:layout_below="@+id/age"-->
        <!--            android:layout_marginTop="1dp"-->
        <!--            android:orientation="horizontal"-->
        <!--            android:padding="10dp">-->

        <!--        </LinearLayout>-->
        <LinearLayout
            android:padding="10dp"
            android:id="@+id/fee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/region"
            android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iregion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingRight="5dp"
                    android:src="@drawable/ic_baseline_language_24" />

                <TextView
                    android:id="@+id/tregion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Khu vực"
                    android:textSize="20dp" />
        </LinearLayout>
</LinearLayout>